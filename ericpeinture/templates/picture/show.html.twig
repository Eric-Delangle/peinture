{% extends 'base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <h1 style="text-align:center;">Image</h1>
<div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ picture.name }}</td>
            </tr>
            <tr>
                <th>Visuel</th>
                <td>
                   
                    <p><img src=" {{ asset(['images/products/', galery.picture]|join) }} " class="images"></p>
                   
                </td> 
            </tr>
            <tr>
                <th>Enregistrée le</th>
                <td>{{ picture.createdAt ? picture.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('picture_index') }}" class="btn btn-info">Retour à la liste</a>

    <a href="{{ path('picture_edit', {'id': picture.id}) }}" class="btn btn-success">Editer</a>

    {{ include('picture/_delete_form.html.twig') }}
</div>
{% endblock %}
